  email = sam@samsymons.com
  signingkey = F9B3AB91078D00B0
[includeIf "gitdir:~/Code/Work"]
    path = .gitconfig.work
[includeIf "gitdir:~/Code/Projects"]
    path = .gitconfig.personal

[url "git@github.paypal.com:"]
    insteadOf = https://github.paypal.com/
[url "git@github.paypal.com:"]
    pushInsteadOf = "https://github.paypal.com/"

[color]
  ui = true
  wtf = true

[alias]
  aa = add --all
  c = commit -S
  amend = commit --amend -C HEAD
  b = branch
  branches = branch -a --color -v
  co = checkout
  dc = diff --cached
  dd = difftool develop
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  su = submodule update --init --recursive

[apply]
  whitespace = warn

[core]
  excludesfile = ~/.gitignore
	editor = nvim

[fetch]
  prune = true

[push]
  default = tracking

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[mergetool]
  prompt = false
  keepBackup = false

[merge]
  tool = Kaleidoscope

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[http]
  sslVerify = false
[gpg]
	program = /usr/local/bin/gpg2
