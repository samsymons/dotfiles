[user]
  name = Sam Symons
  email = sam@samsymons.com

[color]
  ui = true
  wtf = true

[alias]
  amend = commit --amend -C HEAD
  branches = branch -a --color -v
  co = checkout
  count = shortlog -sn --no-merges
  recent = shortlog --since=yesterday
  today = shortlog --since=midnight

[apply]
  whitespace = warn

[core]
  excludesfile = ~/.gitignore

[fetch]
  prune = true

[push]
  default = tracking

[pull]
  rebase = true

[hub]
  protocol = https

[github]
  user = samsymons

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[mergetool]
  prompt = false
  keepBackup = false

[merge]
  tool = Kaleidoscope
