[user]
  name = Sam Symons
  email = sam@samsymons.com

[color]
  ui = true
  wtf = true

[alias]
  aa = add --all
  amend = commit --amend -C HEAD
  b = branch
  branches = branch -a --color -v
  ci = commit --verbose
  co = checkout
  dc = diff --cached
  dd = difftool develop
  fa = fetch --all
  ff = merge --ff-only
  noff = merge --no-ff

[apply]
  whitespace = warn

[core]
  excludesfile = ~/.gitignore
  editor = /usr/bin/vim

[fetch]
  prune = true

[push]
  default = tracking

[pull]
  rebase = true

[hub]
  protocol = https

[github]
  user = samsymons

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[mergetool]
  prompt = false
  keepBackup = false

[merge]
  tool = Kaleidoscope
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
