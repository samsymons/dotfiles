export PATH="$HOME/.dotfiles/bin:./bin:/usr/local/bin:$HOME/.rbenv:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin"
export PATH="/usr/local/narwhal/bin:$PATH"
export PATH="$HOME/.cabal/bin:$PATH"
export CAPP_BUILD="/Users/samsymons/Code/Cortex/Air Forms/Build"

export DOTFILES=$HOME/Code/Dotfiles
export PROJECTS=$HOME/Code

# Source every .zsh file in this rep
for config_file ($DOTFILES/**/source/*.zsh) [[ "$(basename $config_file)" == "completion.zsh" ]] || source $config_file

fpath=(~/.zsh/completion $fpath)

# Initialize autocomplete here, otherwise functions won't be loaded
autoload -U compinit
compinit

# Load every completion after autocomplete loads
for config_file ($DOTFILES/**/source/completion.zsh) source $config_file

# Travis configuration
[ -f /Users/samsymons/.travis/travis.sh ] && source /Users/samsymons/.travis/travis.sh

# Added by the Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
